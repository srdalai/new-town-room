<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Need help?"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iconCaptain"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/captain_icon_bg"
                android:padding="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_action_person" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:text="Contact your ZOYO Captain for assistance" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGetAssistance"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="168dp"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="Get Assistance"
                android:textAllCaps="false"
                android:textColor="@color/material_red"
                app:cornerRadius="24dp"
                app:strokeColor="@color/material_red"
                app:strokeWidth="1dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>