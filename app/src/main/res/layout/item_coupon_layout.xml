<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dimen_8dp"
    android:paddingEnd="@dimen/dimen_8dp"
    android:paddingBottom="@dimen/dimen_4dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_12dp"
            android:layout_margin="@dimen/dimen_12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageViewIcon"
                    android:layout_width="96dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="6dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/banner" />

                <TextView
                    android:id="@+id/txtCoupon"
                    android:layout_width="96dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:layout_marginTop="6dp"
                    android:layout_toEndOf="@id/imageViewIcon"
                    android:background="@drawable/coupon_bg"
                    android:gravity="center"
                    android:text="ZOYO50"
                    android:textColor="@color/black" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/matBtnApply"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="132dp"
                    android:layout_height="44dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:text="Apply"
                    android:textColor="@color/material_red"
                    android:textSize="@dimen/dimen_12sp"
                    app:strokeColor="@color/default_grey"
                    app:strokeWidth="1dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txtCouponTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="Get 35% off plus free chai at Chaayos"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_18sp" />

            <TextView
                android:id="@+id/txtSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:textSize="16sp"
                android:text="Coupon for free chai will be recieved post check-in" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>